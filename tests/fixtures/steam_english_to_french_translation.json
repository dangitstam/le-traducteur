{
  "dataset_reader": {
    "type": "europarl_parallel_english_french",
    "en_tokenizer": {
      "type": "word"
    },
    "fr_tokenizer": {
      "type": "word",
      "word_splitter": {
        "language": "fr_core_news_sm"
      }
    }
  },
  "train_data_path": "tests/fixtures/steam_europarl_en_fr.jsonl",
  "validation_data_path": "tests/fixtures/steam_europarl_en_fr.jsonl",
  "vocabulary": {
    "max_vocab_size": 10000
  },
  "model": {
    "type": "english_to_french_seq2seq",
    "en_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": false,
        "vocab_namespace": "en"
      }
    },
    "fr_field_embedding_size": 100,
    "en_encoder": {
      "type": "rnn",
      "input_size": 100,
      "hidden_size": 256
    },
    "fr_decoder_type": "rnn",
    "fr_decoder_num_layers": 2,
    "output_projection_layer": {
      "input_dim": 256,
      "num_layers": 2,
      "hidden_dims": [500, 10002],
      "activations": ["relu", "sigmoid"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source", "num_tokens"], ["target", "num_tokens"]],
    "batch_size": 10
  },

  "trainer": {
    "num_epochs": 25,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 1.0,
    "optimizer": {
      "type": "adagrad"
    }
  }
}
