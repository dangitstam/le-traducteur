{
  "dataset_reader": {
    "type": "europarl_parallel_english_french",
    "en_tokenizer": {
      "type": "word",
      "end_tokens": ["@end@"]
    },
    "fr_tokenizer": {
      "type": "word",
      "end_tokens": ["@end@"],
      "word_splitter": {
        "language": "fr_core_news_sm"
      }
    }
  },
  "train_data_path": "/data/dangt7/europarl_en_fr/europarl_en_fr_train.jsonl",
  "validation_data_path": "/data/dangt7/europarl_en_fr/europarl_en_fr_dev.jsonl",
  "vocabulary": {
    "max_vocab_size": { "en": 16000, "fr": 80000 }
  },
  "model": {
    "type": "english_to_french_seq2seq",
    "en_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "vocab_namespace": "en"
      }
    },
    "fr_field_embedding_size": 100,
    "en_encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 1024
    },
    "fr_decoder_type": "lstm",
    "fr_decoder_num_layers": 2,
    "output_projection_layer": {
      "input_dim": 1024,
      "num_layers": 1,
      "hidden_dims": [80002],
      "activations": ["relu"],
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["en", "num_tokens"], ["fr", "num_tokens"]],
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 25,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 1.0,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
